<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form" align="center">
<br />
  <h1>New Gram</h1>
  <%= simple_form_for @gram do |f| %>
    <%= "Message" %>
    <%= f.text_area :message, :rows => 10, :cols => 80 %>
    <%= f.input :picture %>
    <br />
    <%= f.submit "Post!", class: 'btn btn-success' %>
  <% end %>
  <br />
</div>